# .env.prod
# --- Configuración de Django ---
SECRET_KEY= # Generar una clave segura y única
DEBUG=False
ALLOWED_HOSTS=smgi.iiap.edu.pe,localhost,127.0.0.1

# --- Configuración de Base de Datos ---
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_NAME=smgi_prod_db
DB_USER=smgi_prod_user
DB_PASSWORD= # Contraseña segura de la base de datos
DB_HOST=db
DB_PORT=5432

# --- Configuración de Redis ---
REDIS_URL=redis://redis:6379/1

# --- Configuración de Celery ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Configuración de Email ---
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER= # Usuario del servidor SMTP
EMAIL_HOST_PASSWORD= # Contraseña del servidor SMTP
DEFAULT_FROM_EMAIL=noreply@iiap.org.co

# --- Configuración de CORS ---
CORS_ALLOWED_ORIGINS=https://smgi.iiap.edu.pe,http://localhost:3000

# --- Configuración Personalizada de SMGI ---
MAX_MONITORING_LAYERS=1000
MONITORING_INTERVAL_MINUTES=15
ALERT_RETENTION_DAYS=90
REPORT_RETENTION_DAYS=365
MAX_CONCURRENT_MONITORS=50
ARCGIS_REQUEST_TIMEOUT=60
CHANGE_DETECTION_THRESHOLD=0.05